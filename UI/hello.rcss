body {
    font-family: Lato; /* 環境に合わせてフォント名を変更してください */
    background-color: #00000080;
    color: white;
    width: 100%;
    height: 100%;
}

.flex {
	display: flex;
	background: #66806a;
	padding: 3px;
}

.flex > div {
	background-color: #fff1af;
	padding: 10px;
	margin: 3px;
	flex: 1;
}

.flex > .double-width {
	flex: 2;
}

h2 {
	text-align: center;
	font-size: 1.3em;
	color: #243434;
	border-bottom: 1px #666;
}