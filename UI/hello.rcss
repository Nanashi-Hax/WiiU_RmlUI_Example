body {
	font-family: Lato;
	font-size: 20dp;
	color: white;
	background: rgba(51, 51, 51, 0.8); /* Semi-transparent background */
	text-align: center;
	padding: 2em;
    width: auto; /* Don't fill entire screen */
    height: auto; /* Don't fill entire screen */
}

h1 {
	font-size: 2em;
	color: #f4a460;
}

button {
    display: inline-block;
    padding: 10dp 20dp;
    background-color: #555;
    border: 2dp #999;
}

button:hover {
    background-color: #777;
}
